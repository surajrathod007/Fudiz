<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/back_color"
    tools:context=".FoodInfoActivity">

    <ScrollView

        android:background="@color/back_color"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.appcompat.widget.LinearLayoutCompat

            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <androidx.cardview.widget.CardView
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgMeal"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_margin="10dp"
                android:id="@+id/txtTitle"
                android:text="Hii there"
                android:textSize="25sp"
                android:textColor="@color/text_color_bold"
                android:fontFamily="@font/main_heavy"
                app:layout_constraintTop_toBottomOf="@+id/imgMeal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="#09CEE8"
                    android:layout_margin="10dp"
                    app:cardElevation="0dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView

                            android:fontFamily="@font/main_bold"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:text=""
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/txtCountryInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardElevation="0dp"
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="#4FDA13"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:fontFamily="@font/main_bold"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:text=""
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/txtCategoryInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.cardview.widget.CardView>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:layout_margin="10dp"
                android:text="Instructions : "
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="@font/main_bold"
                android:textColor="@color/text_color_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView

                app:cardElevation="0dp"
               android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtInstruction"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/main_semibold"
                    android:text=""
                    android:textColor="@color/air_force_blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_margin="10dp"
                android:text="Ingredients : "
                android:textColor="@color/text_color_bold"
                android:textSize="20sp"
                android:fontFamily="@font/main_bold"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_margin="5dp"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="0.5"
                        android:text=""
                        android:fontFamily="@font/main_semibold"
                        android:textColor="@color/air_force_blue"
                        android:id="@+id/txtIngredients"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:fontFamily="@font/main_semibold"
                        android:layout_weight="0.5"
                        android:text=""
                        android:textColor="@color/air_force_blue"
                        android:id="@+id/txtMeasure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_margin="10dp"
                android:textColor="@color/text_color_bold"
                android:fontFamily="@font/main_bold"
                android:textStyle="bold"
                android:text="Video/Article : "
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <androidx.appcompat.widget.LinearLayoutCompat

                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnYoutube"
                    android:textColor="@color/youtube_icon"
                    android:drawableTint="@color/youtube_icon"
                    android:paddingLeft="10dp"
                    android:elevation="0dp"
                    android:background="@drawable/youtube_button_bg"
                    android:drawableLeft="@drawable/ic_baseline_play_arrow_24"
                    android:text="YouTube"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSource"
                    android:paddingLeft="10dp"
                    android:background="@drawable/youtube_button_bg"
                    android:backgroundTint="@color/source_button"
                    android:textColor="@color/source_icon"
                    android:drawableTint="@color/source_icon"
                    android:drawableLeft="@drawable/ic_baseline_insert_link_24"
                    android:text="Source"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>